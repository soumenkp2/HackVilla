<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentclass.Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hack Villa's Demon"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/head"
                    android:textSize="22sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Access all your information in one desk"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/poppins"
                    android:id="@+id/subhead"
                    android:layout_marginBottom="40dp"
                    android:textSize="15sp"/>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">



                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#B4F8EF"
                        app:cardCornerRadius="20dp"
                        android:id="@+id/submission"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:padding="5dp"
                                android:src="@drawable/ar3d">


                            </ImageView>


                            <TextView
                                android:layout_margin="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:text="Submission"/>










                        </LinearLayout>





                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/channel"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:padding="5dp"
                                android:src="@drawable/connection">


                            </ImageView>


                            <TextView
                                android:layout_margin="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:text="Team Channel"/>







                        </LinearLayout>





                    </androidx.cardview.widget.CardView>






                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#FFED8C"
                        app:cardCornerRadius="20dp"
                        android:id="@+id/mentorcardbtn"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/query"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:padding="5dp"
                                android:src="@drawable/quest">


                            </ImageView>


                            <TextView
                                android:layout_margin="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins"
                                android:gravity="center"
                                android:text="Ask Query"/>







                        </LinearLayout>




                    </androidx.cardview.widget.CardView>



                </LinearLayout>











                <LinearLayout
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">



                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        android:id="@+id/timetable"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/sms"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:padding="5dp"
                                android:src="@drawable/sms">


                            </ImageView>


                            <TextView
                                android:layout_margin="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:text="Instant SMS"/>







                        </LinearLayout>





                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#F8E9FF"
                        app:cardCornerRadius="20dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/present"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:padding="5dp"
                                android:src="@drawable/presentation">


                            </ImageView>


                            <TextView
                                android:layout_margin="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:text="Presentation"/>







                        </LinearLayout>




                    </androidx.cardview.widget.CardView>








                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/team"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:padding="5dp"
                                android:src="@drawable/united">


                            </ImageView>


                            <TextView
                                android:layout_margin="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:text="Know your team"/>







                        </LinearLayout>



                    </androidx.cardview.widget.CardView>




                </LinearLayout>


                <ImageView
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/dashhead"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Upcoming Events"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/task_recycle"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />








                </LinearLayout>








































        </RelativeLayout>









    </ScrollView>



</FrameLayout>